pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Parimal-Pradhan/cafe_web.git/'
            }
        }

        stage('Deploy to Apache') {
            steps {
                sh '''
                    sudo cp -r * /var/www/html/
                    sudo systemctl restart apache2
                '''
            }
        }
    }
}
